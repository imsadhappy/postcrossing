<%= render "account/shared/menu" %>

<h1><%= t('title.sessions.index') %></h1>

<div id="sessions">
  <% @sessions.each do |session|
        current_session = session.id == Current.session.id %>
    <div id="<%= dom_id session %>">
      <p>
        <strong><%= t("account.session.#{current_session ? 'this_':''}user_agent") %>:</strong>
        <%= session.user_agent %>
      </p>

      <p>
        <strong><%= t("account.session.#{current_session ? 'this_':''}ip_address") %>:</strong>
        <%= session.ip_address %>
      </p>

      <p>
        <strong><%= t('account.session.created_at') %>:</strong>
        <%= session.created_at %>
      </p>
    </div>
    <p>
      <%= button_to t('button.sign_out'), session, method: :delete %>
    </p>
  <% end %>
</div>

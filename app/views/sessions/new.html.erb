<h1><%= t('title.sessions.new') %></h1>

<%= form_with(url: sign_in_path) do |form| %>
  <div class="field">
    <%= form.email_field :email, value: params[:email_hint], required: true, autocomplete: "email" %>
    <%= form.label :email, t('label.email') %>
  </div>

  <div class="field">
    <%= form.password_field :password, required: true, autocomplete: "current-password" %>
    <%= form.label :password, t('label.password') %>
  </div>

  <div>
    <%= form.submit t('button.sign_in'), class: 'btn-primary' %>
  </div>
<% end %>

<div>
  <%= link_to t('button.sign_up'), sign_up_path %> |
  <%= link_to t('notice.password.forgot'), new_account_password_reset_path %>
</div>

<%= render "account/shared/omniauth" %>

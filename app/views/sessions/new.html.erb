<h1>Sign in</h1>

<%= form_with(url: sign_in_path) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, autocomplete: "current-password" %>
  </div>

  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>

<%= render "account/shared/omniauth" %>

<div>
  <%= link_to "Sign up", sign_up_path %> |
  <%= link_to "Forgot your password?", new_account_password_reset_path %>
</div>

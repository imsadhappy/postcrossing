<%= render "account/shared/menu" %>

<% if @user.verified? %>
  <h1><%= t('title.emails.edit') %></h1>
<% else %>
  <h1><%= t('email.verify') %></h1>
  <%= render "account/shared/verify" %>
<% end %>

<%= render "account/shared/errors" %>

<%= form_with(url: account_email_path, method: :patch) do |form| %>
  <div class="field">
    <%= form.email_field :email, required: true %>
    <%= form.label :email, t('email.new') %>
  </div>

  <div class="field">
    <%= form.password_field :current_password, required: true, autocomplete: "current-password" %>
    <%= form.label :current_password, t('label.password_current') %>
  </div>

  <div>
    <%= form.submit t('button.save_changes'), class: 'btn-primary' %>
  </div>
<% end %>

<%= render "account/shared/menu" %>

<div>

    <h1><%= t('title.details.edit') %></h1>

    <%= render "account/shared/errors" %>

    <%= form_with(url: account_detail_path, method: :patch) do |form| %>
        <div class="field">
            <%= form.text_area :about, value: strip_tags(@user.about) %>
        </div>

        <div>
            <%= form.submit t('button.save_changes'), class: 'btn-primary' %>
        </div>
    <% end %>

</div>

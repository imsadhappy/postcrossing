<%= render "account/shared/menu" %>

<% unless Current.user.verified? %>
    <h2><%= t('email.verify') %></h2>
    <%= render "account/shared/verify" %>
<% end %>

<h1><%= t('hello') %> <%= Current.user.name %></h1>

<div><%=raw Current.user.about&.gsub "\n", '<br>' %></div>


<div>
    <%= button_to t('button.sign_out'), Current.session, method: :delete %>
</div>

<div>
    <%= button_to t('account.details.show.delete_my_account'),
                    account_detail_path,
                    method: :delete,
                    data: {
                        confirm: t('alert.confirm'),
                        turbo_confirm: t('alert.confirm')
                    } %>
</div>

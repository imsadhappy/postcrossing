<header>

  <div class="wrapper">

    <%= link_to_unless_current request.env['HTTP_HOST'].capitalize, root_path %>

    <div class="float-right">

    <%= link_to_unless_current t("title.details.show"), account_path %>

    </div>

    <% if notice %>
      <div class="notice" data-turbo-cache="false"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert" data-turbo-cache="false"><%= alert %></div>
    <% end %>

  </div>

</header>
